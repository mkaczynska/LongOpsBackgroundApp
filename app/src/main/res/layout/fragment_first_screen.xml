<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blstream.kaczynska.longopsbackgroundapp.FirstScreenFragment"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <Spinner
        android:id="@+id/spinnerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/timePrompt"
        android:layout_margin="@dimen/text_margin"
        />
    <Button
        android:id="@+id/buttonStartOperationId"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_height"
        android:text="@string/startButtonText"
        android:layout_gravity="center"
        android:layout_margin="@dimen/text_margin"
        />

    <Button
        android:id="@+id/buttonGetDetailsId"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_height"
        android:text="@string/detailsButtonText"
        android:layout_gravity="center"
        android:layout_margin="@dimen/text_margin"
        />

</LinearLayout>
